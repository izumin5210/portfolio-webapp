{
  "name": "@izumin5210/portfolio",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "lint": "frolint --branch origin/main --expect-no-errors --expect-no-diff",
    "dev": "yarn workspaces foreach --topological --parallel --interlaced run dev",
    "build": "yarn workspaces foreach --topological --parallel --interlaced run build",
    "bootstrap": "yarn workspaces foreach --topological --parallel --interlaced run prepack",
    "test": "yarn workspaces foreach --topological --parallel --interlaced run test",
    "typecheck": "yarn workspaces foreach --topological --parallel --interlaced run typecheck"
  },
  "devDependencies": {
    "@types/glob": "8.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.3.0",
    "frolint": "2.8.2",
    "glob": "8.0.3",
    "jest": "29.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "scripts": "workspace:^",
    "typescript": "4.8.3"
  },
  "packageManager": "yarn@3.2.3"
}
